{
  "id": "greeting",
  "version": "1.0",
  "name": "Greeting Workflow",
  "description": "Greet Someone",
  "functions": [
    {
      "name": "greetingFunction",
      "operation": "file://myapis/greetingapis.json#greeting"
    }
  ],
  "states": [
    {
      "name": "Greet",
      "start": true,
      "enterAction": {
        "type": "InvokeFunction",
        "functionName": "greetingFunction",
        "arguments": {
          "name": "${ .person.name }"
        }
      },
      "enterResultHandler": "${ .result += $value }"
    }
  ]
}